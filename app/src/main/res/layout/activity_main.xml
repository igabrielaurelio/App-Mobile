<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ide_background"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvQuestionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="main.java > QuizClass"
        android:fontFamily="monospace"
        android:textColor="@color/ide_comment"
        android:textSize="14sp"
        android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_terminal_card"
        android:padding="24dp"
        android:layout_marginBottom="32dp">

        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="/* Carregando pergunta... */"
            android:fontFamily="monospace"
            android:textColor="@color/ide_cyan"
            android:textSize="18sp"
            android:lineSpacingExtra="4dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnOption1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="var option = 1;"
        android:textAllCaps="false"
        android:gravity="start|center_vertical"
        android:paddingStart="20dp"
        android:fontFamily="monospace"
        android:background="@drawable/bg_code_button"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnOption2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="var option = 2;"
        android:textAllCaps="false"
        android:gravity="start|center_vertical"
        android:paddingStart="20dp"
        android:fontFamily="monospace"
        android:background="@drawable/bg_code_button"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnOption3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="var option = 3;"
        android:textAllCaps="false"
        android:gravity="start|center_vertical"
        android:paddingStart="20dp"
        android:fontFamily="monospace"
        android:background="@drawable/bg_code_button"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnOption4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="var option = 4;"
        android:textAllCaps="false"
        android:gravity="start|center_vertical"
        android:paddingStart="20dp"
        android:fontFamily="monospace"
        android:background="@drawable/bg_code_button"
        android:textColor="@color/white"/>

</LinearLayout>