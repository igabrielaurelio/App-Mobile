<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/ide_background"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;DEV /&gt;"
        android:fontFamily="monospace"
        android:textColor="@color/ide_purple"
        android:textSize="48sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="// Initialize system_quiz.exe..."
        android:fontFamily="monospace"
        android:textColor="@color/ide_comment"
        android:textSize="14sp"
        android:layout_marginBottom="48dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/ide_panel"
        android:padding="4dp"> <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/ide_background"
        android:fontFamily="monospace"
        android:hint="user@name:~$ _"
        android:textColorHint="@color/ide_comment"
        android:textColor="@color/ide_green"
        android:inputType="textPersonName"
        android:paddingStart="16dp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnStartQuiz"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_code_button"
        android:text="sudo run quiz"
        android:fontFamily="monospace"
        android:textColor="@color/ide_green"
        android:textStyle="bold" />

</LinearLayout>