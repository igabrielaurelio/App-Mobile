<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/ide_purple" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/ide_background" /> <corners android:radius="4dp" />
            <stroke android:width="2dp" android:color="@color/ide_green" /> </shape>
    </item>
</selector>